    <AcrylicBrush
        x:Key="BrushDetailsBackground"
        BackgroundSource="HostBackdrop"
        FallbackColor="{StaticResource ColorDetailsBackground}"
        TintColor="{StaticResource BrushDeepBackgroundColor}"
        TintOpacity="0.75" />

    <AcrylicBrush
        x:Key="PageBackground"
        BackgroundSource="HostBackdrop"
        FallbackColor="{StaticResource ColorDetailsBackground}"
        TintColor="{StaticResource BrushDeepBackgroundColor}"
        TintOpacity="0.8" />

    <AcrylicBrush
        x:Key="ContentDialogBackground"
        BackgroundSource="HostBackdrop"
        FallbackColor="{StaticResource ColorDetailsBackground}"
        TintColor="{StaticResource BrushDeepBackgroundColor}"
        TintOpacity="0.8" />
