<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_home_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/settings_font_size_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.1.0.0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/settings_font_size_content"
            app:MvxBind="Text AppVersion"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app uses Google Tasks to retrieve/update your task lists and tasks, it also allows you to interact with them offline and sync them later."
            android:textSize="@dimen/settings_font_size_content"
            app:MvxBind="Text ['AboutSummary']"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_margin"
            android:layout_marginBottom="@dimen/settings_margin"
            style="@style/Divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donations"
            android:textStyle="bold"
            android:textSize="@dimen/settings_font_size_header"
            app:MvxBind="Text ['Donations']"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I hope you are enjoying using this app, if you would like to buy me a coffee/beer, just send me an email."
            android:textSize="@dimen/settings_font_size_content"
            app:MvxBind="Text ['AboutDonations']"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_margin"
            android:layout_marginBottom="@dimen/settings_margin"
            style="@style/Divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textStyle="bold"
            android:textSize="@dimen/settings_font_size_header"
            app:MvxBind="Text ['Support']"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I made this app in my free time and it is also open source. If you would like to help me, report an issue, have an idea, want a feature to be implemented, etc please open an issue here:"
            android:textSize="@dimen/settings_font_size_content"
            app:MvxBind="Text ['AboutSupport']"/>

        <TextView
            android:id="@+id/GitHubLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/GithubPage"
            android:textSize="@dimen/settings_font_size_content"/>
    </LinearLayout>

</ScrollView>