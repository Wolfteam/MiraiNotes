<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New task list"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        app:MvxBind="Text [NewTaskList]"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:MvxBind="Error Errors['TaskListTitle']">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:maxLength="50"
            android:inputType="textShortMessage"
            app:MvxBind="Text TaskListTitle; Hint [Title]"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="?AccentColor"
            android:background="?android:attr/selectableItemBackground"
            app:MvxBind="Click AddTaskListCommand; Enabled IsSaveButtonEnabled; Text [Add]"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="?AccentColor"
            android:background="?android:attr/selectableItemBackground"
            app:MvxBind="Click CloseCommand; Text [Cancel]"/>
    </LinearLayout>
</LinearLayout>
